#carouselExampleIndicators.carousel.slide(data-ride='carousel')
    ol.carousel-indicators
        li.active(data-target='#carouselExampleIndicators', data-slide-to='0')
        li(data-target='#carouselExampleIndicators', data-slide-to='1')
        li(data-target='#carouselExampleIndicators', data-slide-to='2')
    .carousel-inner
        .carousel-item.active
            img.d-block.w-100(src='img/region-slider/1.jpg', alt='First slide')
        .carousel-item
            img.d-block.w-100(src='img/region-slider/2.jpg', alt='Second slide')
        .carousel-item
            img.d-block.w-100(src='img/region-slider/3.jpg', alt='Third slide')
    a.carousel-control-prev(href='#carouselExampleIndicators', role='button', data-slide='prev')
        i.mdi.mdi-chevron-left(aria-hidden='true')
        | Previous
    a.carousel-control-next.icon(href='#carouselExampleIndicators', role='button', data-slide='next')
        i.mdi.mdi-chevron-right(aria-hidden='true')
        span.sr-only
        | Next
